/*6. Write a recursive function to print first N even natural numbers in reverse order*/

#include<stdio.h>
void  printN(int n);// function prototype
int main()
{
int n;
// input number from user 
printf("Enter how many even natural numbers you want to see in reverse order :");
scanf("%d",&n);
printN(n); // function calling
return 0;
}
void printN(int n){ // function defination
if(n>0){
   if(n%2==0){ // check even condition before printing 
      printf("%d\t",n);
   }
   printN(n-1);
}
}
